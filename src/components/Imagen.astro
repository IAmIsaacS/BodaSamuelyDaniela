---
import { Image } from "astro:assets";
import img1 from "../assets/image.jpg";
---

<section class="w-full pt-10 flex items-center justify-center flex-col bg-white">
  <div class="w-[60%] md:w-[50%] lg:w-[30%]">
    <Image
      src={img1}
      alt="Imagen central"
      class="w-full h-auto object-cover rounded-full"
    />
  </div>
  <p
    class="mt-5 tracking-[0.25em] text-xl sm:text-2xl md:text-3xl whitespace-nowrap font-light"
  >
    Samuel &amp; Daniela
  </p>
</section>
