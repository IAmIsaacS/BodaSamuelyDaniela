  </p>
</section>


<script>

  const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
  
  document.addEventListener("DOMContentLoaded", async () => {

    if (isMobile) {

      document.querySelector("#regalos h1").classList.add("mobile-fade-up");
      document.querySelectorAll("#regalos .intro-text p").forEach(p => {
        p.classList.add("mobile-fade-up");
      });
      document.querySelectorAll("#regalos .gift-card").forEach(card => {
        card.classList.add("mobile-fade-up");
      });
      document.querySelector("#regalos .closing-text").classList.add("mobile-fade-up");
      

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate-in');
          }
        });
      }, { threshold: 0.1 });
      

      document.querySelectorAll('.mobile-fade-up').forEach(el => {
        observer.observe(el);
      });
      
      return;
    }
    

    try {
      const { gsap } = await import("gsap");
      const { ScrollTrigger } = await import("gsap/ScrollTrigger");
      gsap.registerPlugin(ScrollTrigger);

 
      const scrollConfig = {
        once: true,
        markers: false
      };


      gsap.from("#regalos h1", {
        scrollTrigger: {
          trigger: "#regalos h1",
          start: "top 85%",
          end: "bottom 60%",
          toggleActions: "play none none none",
          ...scrollConfig
        },
        opacity: 0,
        y: 50,
        duration: 1,
        ease: "power3.out",
      });


      gsap.from("#regalos .intro-text p", {
        scrollTrigger: {
          trigger: "#regalos .intro-text",
          start: "top 80%",
          end: "bottom 60%", 
          toggleActions: "play none none none",
          ...scrollConfig
        },
        opacity: 0,
        y: 30,
        duration: 0.9,
        stagger: 0.2,
        ease: "power2.out",
        delay: 0.2,
      });


      const cards = document.querySelectorAll("#regalos .gift-card");
      cards.forEach((card, i) => {
        gsap.from(card, {
          scrollTrigger: {
            trigger: card,
            start: "top 85%",
            end: "bottom 60%",
            toggleActions: "play none none none",
            ...scrollConfig
          },
          opacity: 0,
          y: 50,
          x: i % 2 === 0 ? -30 : 30,
          duration: 1,
          ease: "power3.out",
          delay: 0.1 * i,
        });
      });


      gsap.from("#regalos .closing-text", {
        scrollTrigger: {
          trigger: "#regalos .closing-text",
          start: "top 90%",
          end: "bottom 60%",
          toggleActions: "play none none none",
          ...scrollConfig
        },
        opacity: 0,
        y: 40,
        duration: 1,
        ease: "power2.out",
        delay: 0.3,
      });
    } catch (error) {
      console.error("Error cargando GSAP:", error);

      document.querySelectorAll("#regalos *").forEach(el => {
        el.classList.add("mobile-fade-up", "animate-in");
      });
    }
  });
</script>

<style>

  .mobile-fade-up {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }
  
  .mobile-fade-up.animate-in {
    opacity: 1;
    transform: translateY(0);
  }
  

  #regalos .gift-card:nth-child(1).animate-in {
    transition-delay: 0.1s;
  }
  
  #regalos .gift-card:nth-child(2).animate-in {
    transition-delay: 0.2s;
  }
  

  #regalos .closing-text.animate-in {
    transition-delay: 0.3s;
  }
</style>