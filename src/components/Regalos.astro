    <!-- Card 2 -->
    <div
      class="gift-card bg-white border border-gray-100 rounded-xl shadow-sm hover:shadow-lg transition-all duration-500 p-8 hover:-translate-y-1"
    >
      <h3 class="text-xl font-semibold text-[#C8AD7F] mb-3">
